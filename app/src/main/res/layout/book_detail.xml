<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/ivImageBookDetail"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivImageBookDetail"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@+id/ivImageBookDetail"
        android:text="Title"
        android:lines="4"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_primary_text_material_light"
        android:textStyle="normal"
        android:layout_alignRight="@+id/ScrollView01"
        android:layout_alignEnd="@+id/ScrollView01" />

    <TextView
        android:id="@+id/tvAuthorDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivImageBookDetail"
        android:layout_alignStart="@+id/tvTitleDetail"
        android:layout_below="@+id/tvTitleDetail"
        android:layout_marginTop="34dp"
        android:text="author"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/background_material_dark" />

    <TextView
        android:id="@+id/tvPublishSherDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTitleDetail"
        android:layout_below="@+id/tvAuthorDetail"
        android:layout_marginTop="3dp"
        android:text="publisherD"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvPulishYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTitleDetail"
        android:layout_below="@+id/tvPublishSherDetail"
        android:text="publishYear"
        android:layout_marginTop="3dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivImageBookDetail"
        android:layout_alignStart="@+id/ivImageBookDetail"
        android:layout_centerVertical="true"
        android:text="Thêm vào giỏ hàng"
        android:background="@drawable/button_addtocart"
        android:textColor="@color/primary_500" />

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPulishYear"
        android:layout_alignStart="@+id/tvPulishYear"
        android:layout_centerVertical="true"
        android:text="Mua ngay với 50000"
        android:background="@drawable/button_order"
        android:textColor="@color/abc_primary_text_disable_only_material_dark" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnAddToCart"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tvDesDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:scrollbars="vertical"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic"
            android:textColor="@color/abc_search_url_text_pressed"
            android:typeface="normal"></TextView>
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivImageBookDetail"
        android:layout_alignLeft="@+id/btnOrder"
        android:layout_alignStart="@+id/btnOrder"
        android:text="Giá bìa"
        android:layout_marginTop="3dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvOriginalPriceDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/ivImageBookDetail"
        android:text="50000"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#fc0303" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Giới thiệu"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/btnAddToCart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/accent_500" />
</RelativeLayout>